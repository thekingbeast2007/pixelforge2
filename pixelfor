    <!-- App -->
    <script type="text/babel">
      const { useState, useMemo, useEffect } = React;

      const fmt = (n) =>
        new Intl.NumberFormat(undefined, {
          style: "currency",
          currency: "USD",
        }).format(n);
      const presetAmounts = [25, 50, 100, 250];

      /* ---------- SafeImg ---------- */
      function SafeImg({ src, alt = "", className }) {
        const [failed, setFailed] = useState(false);
        const placeholder = useMemo(() => {
          const svg = `<svg xmlns='http://www.w3.org/2000/svg' width='1600' height='900' viewBox='0 0 1600 900'>
          <defs><linearGradient id='g' x1='0' y1='0' x2='1' y2='1'>
            <stop offset='0%' stop-color='#10b981'/><stop offset='100%' stop-color='#065f46'/>
          </linearGradient></defs>
          <rect width='100%' height='100%' fill='url(#g)'/></svg>`;
          return `data:image/svg+xml;utf8,${encodeURIComponent(svg)}`;
        }, []);
        return (
          <img
            src={failed ? placeholder : src}
            alt={alt}
            className={className}
            onError={() => setFailed(true)}
          />
        );
      }

      /* ---------- Accordion ---------- */
      function Accordion({ items = [] }) {
        const [open, setOpen] = useState(null);
        return (
          <div className="rounded-2xl bg-neutral-50 ring-2 ring-emerald-400 border border-emerald-500 shadow-md overflow-hidden">
            {items.map((_, i) => (
              <div
                key={i}
                className="border-t first:border-t-0 border-emerald-400"
              >
                <button
                  type="button"
                  onClick={() => setOpen(open === i ? null : i)}
                  className="w-full flex items-center justify-between px-5 py-4 hover:bg-neutral-100"
                  aria-label={`Toggle section ${i + 1}`}
                >
                  <div className="h-5 w-44 rounded bg-emerald-200" />
                  <span
                    className={`inline-block h-3 w-3 rotate-45 border-r-2 border-b-2 border-emerald-600 transition ${
                      open === i ? "-rotate-135" : "rotate-45"
                    }`}
                  />
                </button>
                <div
                  className={`grid overflow-hidden transition-[grid-template-rows] duration-300 ease-in-out ${
                    open === i ? "grid-rows-[1fr]" : "grid-rows-[0fr]"
                  }`}
                >
                  <div className="min-h-0">
                    <div className="px-5 pb-5 space-y-2">
                      <div className="h-4 w-11/12 rounded bg-emerald-50" />
                      <div className="h-4 w-10/12 rounded bg-emerald-50" />
                      <div className="h-4 w-9/12 rounded bg-emerald-50" />
                    </div>
                  </div>
                </div>
              </div>
            ))}
          </div>
        );
      }

      /* ---------- Navbar ---------- */
      function Navbar() {
        return (
          <header className="sticky top-0 z-40 bg-white/80 backdrop-blur border-b border-emerald-400 ring-2 ring-emerald-500 shadow-sm">
            <nav className="mx-auto flex max-w-7xl items-center justify-between px-4 py-3">
              <a
                href="#/"
                className="flex items-center gap-3"
                aria-label="Home"
              >
                <span className="grid h-9 w-9 place-content-center rounded-xl bg-emerald-500" />
                <span className="sr-only">Home</span>
              </a>
              <ul className="hidden md:flex items-center gap-6 text-sm ml-auto mr-4">
                <li>
                  <a
                    href="#/about"
                    className="block h-8 w-16 rounded-lg border border-emerald-300 bg-emerald-50 hover:border-emerald-500"
                    aria-label="About"
                  />
                </li>
                <li>
                  <a
                    href="#/programs"
                    className="block h-8 w-20 rounded-lg border border-emerald-300 bg-emerald-50 hover:border-emerald-500"
                    aria-label="Programs"
                  />
                </li>
                <li>
                  <a
                    href="#/donate"
                    className="block h-8 w-16 rounded-lg border border-emerald-300 bg-emerald-50 hover:border-emerald-500"
                    aria-label="Donate"
                  />
                </li>
              </ul>
              <a
                href="#/donate"
                className="rounded-xl bg-emerald-600 px-8 py-2 text-transparent select-none"
              >
                .
              </a>
            </nav>
          </header>
        );
      }

      /* ---------- Footer ---------- */
      function Footer() {
        return (
          <footer className="bg-neutral-900 text-neutral-100">
            <div className="mx-auto max-w-7xl px-4 py-14 grid md:grid-cols-4 gap-8">
              <div>
                <div className="flex items-center gap-3">
                  <span className="grid h-9 w-9 place-content-center rounded-xl bg-emerald-500" />
                </div>
                <div className="mt-4 h-5 w-40 rounded bg-neutral-800" />
              </div>
              <div>
                <div className="h-5 w-24 rounded bg-neutral-800" />
                <ul className="mt-3 space-y-2">
                  <li className="h-4 w-40 rounded bg-neutral-800" />
                  <li className="h-4 w-32 rounded bg-neutral-800" />
                  <li className="h-4 w-44 rounded bg-neutral-800" />
                </ul>
              </div>
              <div>
                <div className="h-5 w-28 rounded bg-neutral-800" />
                <ul className="mt-3 space-y-2">
                  <li className="h-4 w-24 rounded bg-neutral-800" />
                  <li className="h-4 w-28 rounded bg-neutral-800" />
                  <li className="h-4 w-24 rounded bg-neutral-800" />
                </ul>
              </div>
              <div>
                <div className="h-5 w-32 rounded bg-neutral-800" />
                <ul className="mt-3 space-y-2">
                  <li className="h-4 w-32 rounded bg-neutral-800" />
                  <li className="h-4 w-28 rounded bg-neutral-800" />
                  <li className="h-4 w-36 rounded bg-neutral-800" />
                  <li className="h-4 w-24 rounded bg-neutral-800" />
                </ul>
              </div>
            </div>
            <div className="border-t border-neutral-800">
              <div className="mx-auto max-w-7xl px-4 py-6 flex flex-wrap items-center justify-between gap-4">
                <span className="h-4 w-64 rounded bg-neutral-800" />
                <a
                  href="#/donate"
                  className="rounded-lg bg-emerald-600 px-6 py-2 text-transparent select-none"
                >
                  .
                </a>
              </div>
            </div>
          </footer>
        );
      }

      /* ---------- Pages ---------- */
      function HomePage() {
        return (
          <>
            <section id="home" className="relative isolate overflow-hidden">
              <SafeImg
                src="https://images.unsplash.com/photo-1582719478250-c89cae4dc85b?q=80&w=2000&auto=format&fit=crop"
                alt=""
                className="absolute inset-0 -z-10 h-full w-full object-cover"
              />
              <div className="absolute inset-0 -z-10 bg-black/40" />
              <div className="mx-auto max-w-7xl px-4 py-28 md:py-40 text-white">
                <div className="max-w-2xl">
                  <div className="h-12 w-3/4 rounded bg-white/20" />
                  <div className="mt-6 h-20 w-11/12 rounded bg-white/10" />
                  <div className="mt-8 flex flex-wrap gap-3">
                    <a
                      href="#/donate"
                      className="rounded-xl bg-emerald-600 px-10 py-3 text-transparent select-none"
                    >
                      .
                    </a>
                    <a
                      href="#/about"
                      className="rounded-xl bg-white/10 px-10 py-3 text-transparent ring-1 ring-inset ring-white/40 select-none"
                    >
                      .
                    </a>
                  </div>
                </div>
              </div>
            </section>

            <section className="bg-white border-y border-emerald-400">
              <div className="mx-auto max-w-7xl px-4 py-8 grid grid-cols-2 md:grid-cols-4 gap-6 text-sm">
                {Array.from({ length: 4 }).map((_, i) => (
                  <div
                    key={i}
                    className="rounded-xl bg-neutral-50 p-4 ring-1 ring-emerald-400"
                  >
                    <div className="h-4 w-24 rounded bg-emerald-100" />
                    <div className="mt-2 h-4 w-32 rounded bg-emerald-100" />
                  </div>
                ))}
              </div>
            </section>

            <section className="mx-auto max-w-7xl px-4 py-20">
              <div className="grid md:grid-cols-4 gap-6">
                {Array.from({ length: 4 }).map((_, i) => (
                  <div
                    key={i}
                    className="rounded-2xl bg-emerald-50 p-6 ring-1 ring-emerald-200"
                  >
                    <div className="h-3 w-24 rounded bg-emerald-200" />
                    <div className="mt-2 h-8 w-20 rounded bg-emerald-200" />
                  </div>
                ))}
              </div>
              <div className="mt-10">
                <Accordion items={[{}, {}, {}]} />
              </div>
            </section>
          </>
        );
      }

      function AboutPage() {
        return (
          <section className="mx-auto max-w-7xl px-4 py-20">
            <div className="grid md:grid-cols-2 gap-10 items-start">
              <div className="space-y-5">
                <div className="h-10 w-1/2 rounded bg-emerald-100" />
                <div className="h-20 w-11/12 rounded bg-neutral-100 ring-1 ring-emerald-400" />
                <div className="h-20 w-10/12 rounded bg-neutral-100 ring-1 ring-emerald-400" />
                <div className="h-28 w-9/12 rounded bg-neutral-100 ring-1 ring-emerald-400" />
                <div className="mt-6">
                  <Accordion items={[{}, {}, {}]} />
                </div>
              </div>
              <div className="space-y-6">
                <div className="aspect-[4/3] overflow-hidden rounded-2xl shadow ring-1 ring-emerald-400">
                  <SafeImg
                    src="https://images.unsplash.com/photo-1584149168946-8d07b9b4a0b2?q=80&w=2000&auto=format&fit=crop"
                    alt=""
                    className="h-full w-full object-cover"
                  />
                </div>
                <div className="rounded-2xl bg-white p-6 ring-1 ring-emerald-400 space-y-2">
                  <div className="h-4 w-40 rounded bg-emerald-100" />
                  <div className="grid md:grid-cols-2 gap-2">
                    {Array.from({ length: 4 }).map((_, i) => (
                      <div
                        key={i}
                        className="h-4 w-full rounded bg-emerald-50"
                      />
                    ))}
                  </div>
                </div>
              </div>
            </div>

            <div className="mt-16 space-y-6">
              <div className="h-8 w-40 rounded bg-emerald-100" />
              <div className="grid md:grid-cols-3 gap-6">
                {Array.from({ length: 3 }).map((_, i) => (
                  <div
                    key={i}
                    className="rounded-2xl bg-neutral-50 p-6 ring-1 ring-emerald-400"
                  >
                    <div className="flex items-center gap-4">
                      <div className="grid h-14 w-14 place-content-center rounded-full bg-emerald-600" />
                      <div className="space-y-2">
                        <div className="h-4 w-40 rounded bg-emerald-100" />
                        <div className="h-3 w-28 rounded bg-emerald-100" />
                      </div>
                    </div>
                    <div className="mt-3 h-12 w-full rounded bg-emerald-50" />
                  </div>
                ))}
              </div>
            </div>
          </section>
        );
      }

      function ProgramsPage() {
        const cards = [
          {
            img: "https://images.unsplash.com/photo-1612538496072-983f8f1a5c48?q=80&w=2000&auto=format&fit=crop",
          },
          {
            img: "https://images.unsplash.com/photo-1578496479531-66f0d8a3c3d4?q=80&w=2000&auto=format&fit=crop",
          },
          {
            img: "https://images.unsplash.com/photo-1519389950473-47ba0277781c?q=80&w=2000&auto=format&fit=crop",
          },
        ];
        return (
          <section className="bg-white border-y border-emerald-400">
            <div className="mx-auto max-w-7xl px-4 py-20">
              <div className="h-10 w-52 rounded bg-emerald-100" />
              <div className="mt-8 grid md:grid-cols-3 gap-6">
                {cards.map((c, idx) => (
                  <article
                    key={idx}
                    className="group overflow-hidden rounded-2xl ring-1 ring-emerald-400 shadow-sm bg-neutral-50"
                  >
                    <div className="aspect-[4/3] overflow-hidden">
                      <SafeImg
                        src={c.img}
                        alt=""
                        className="h-full w-full object-cover transition group-hover:scale-105"
                      />
                    </div>
                    <div className="p-5 space-y-3">
                      <div className="h-5 w-40 rounded bg-emerald-100" />
                      <div className="h-12 w-full rounded bg-emerald-50" />
                    </div>
                  </article>
                ))}
              </div>
              <div className="mt-10">
                <Accordion items={[{}, {}, {}, {}]} />
              </div>
            </div>
          </section>
        );
      }

      function DonatePage() {
        const [freq, setFreq] = useState("one-time");
        const [amount, setAmount] = useState(50);
        const [custom, setCustom] = useState("");
        const [method, setMethod] = useState("card");
        const [name, setName] = useState("");
        const [email, setEmail] = useState("");
        const [message, setMessage] = useState("");
        const [success, setSuccess] = useState(false);
        const total = useMemo(
          () => Number(custom || amount || 0),
          [custom, amount]
        );

        const handleSubmit = (e) => {
          e.preventDefault();
          if (!name || !email || total <= 0) return alert(""), null;
          setSuccess(true);
        };

        return (
          <section className="bg-white border-y border-emerald-400">
            <div className="mx-auto max-w-7xl px-4 py-20">
              <div className="grid lg:grid-cols-2 gap-10 items-start">
                <div>
                  <div className="h-10 w-64 rounded bg-emerald-100" />
                  <div className="mt-4 h-16 w-11/12 rounded bg-neutral-100 ring-1 ring-emerald-400" />
                  <div className="mt-6 space-y-3">
                    {Array.from({ length: 3 }).map((_, i) => (
                      <div
                        key={i}
                        className="h-4 w-64 rounded bg-neutral-100 ring-1 ring-emerald-400"
                      />
                    ))}
                  </div>
                  <div className="mt-8 rounded-xl bg-neutral-50 p-4 ring-1 ring-emerald-400">
                    <div className="h-4 w-80 rounded bg-neutral-100" />
                  </div>
                </div>

                <form
                  onSubmit={handleSubmit}
                  className="rounded-2xl bg-neutral-50 p-6 ring-1 ring-emerald-400 shadow-sm"
                >
                  <fieldset>
                    <div className="mt-3 grid grid-cols-2 gap-3">
                      {[
                        { id: "one-time", label: "One-time" },
                        { id: "monthly", label: "Monthly" },
                      ].map((f) => (
                        <label
                          key={f.id}
                          className={`cursor-pointer rounded-xl px-4 py-3 text-center ring-1 transition ${
                            freq === f.id
                              ? "bg-emerald-600 text-white ring-emerald-600"
                              : "bg-white ring-emerald-300 hover:ring-emerald-400"
                          }`}
                        >
                          <input
                            type="radio"
                            name="frequency"
                            value={f.id}
                            checked={freq === f.id}
                            onChange={() => setFreq(f.id)}
                            className="sr-only"
                            aria-label={f.label}
                          />
                          <span className="sr-only">{f.label}</span>
                        </label>
                      ))}
                    </div>
                  </fieldset>

                  <div className="mt-6">
                    <div className="mt-3 grid grid-cols-4 gap-3">
                      {presetAmounts.map((a) => (
                        <button
                          key={a}
                          type="button"
                          onClick={() => {
                            setAmount(a);
                            setCustom("");
                          }}
                          className={`rounded-xl px-4 py-3 text-center ring-1 transition ${
                            Number(custom) === a || (amount === a && !custom)
                              ? "bg-emerald-600 text-white ring-emerald-600"
                              : "bg-white ring-emerald-300 hover:ring-emerald-400"
                          }`}
                          aria-label={`Donate ${fmt(a)}`}
                        >
                          <span className="sr-only">{fmt(a)}</span>
                        </button>
                      ))}
                    </div>
                    <div className="mt-3 flex items-center gap-3">
                      <div className="relative w-48">
                        <input
                          type="number"
                          inputMode="decimal"
                          min={1}
                          step="1"
                          value={custom}
                          onChange={(e) => {
                            setCustom(e.target.value);
                            setAmount(0);
                          }}
                          className="w-full rounded-xl border border-emerald-300 bg-white px-3 py-3 text-neutral-900 outline-none ring-0 focus:border-emerald-500"
                          aria-label="Custom amount"
                        />
                      </div>
                      <div className="h-4 w-28 rounded bg-emerald-100" />
                    </div>
                  </div>

                  <div className="mt-6 grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                      <input
                        aria-label="Full name"
                        value={name}
                        onChange={(e) => setName(e.target.value)}
                        required
                        className="mt-1 w-full rounded-xl border border-emerald-300 bg-white px-3 py-2 outline-none focus:border-emerald-500"
                      />
                    </div>
                    <div>
                      <input
                        aria-label="Email"
                        type="email"
                        value={email}
                        onChange={(e) => setEmail(e.target.value)}
                        required
                        className="mt-1 w-full rounded-xl border border-emerald-300 bg-white px-3 py-2 outline-none focus:border-emerald-500"
                      />
                    </div>
                    <div className="md:col-span-2">
                      <textarea
                        aria-label="Note"
                        value={message}
                        onChange={(e) => setMessage(e.target.value)}
                        rows={3}
                        className="mt-1 w-full rounded-xl border border-emerald-300 bg-white px-3 py-2 outline-none focus:border-emerald-500"
                      />
                    </div>
                  </div>

                  <div className="mt-6">
                    <div className="mt-3 grid grid-cols-3 gap-3">
                      {[
                        { id: "card", label: "Card" },
                        { id: "paypal", label: "PayPal" },
                        { id: "applepay", label: "Apple Pay" },
                      ].map((m) => (
                        <label
                          key={m.id}
                          className={`cursor-pointer rounded-xl px-4 py-3 text-center ring-1 transition ${
                            method === m.id
                              ? "bg-emerald-600 text-white ring-emerald-600"
                              : "bg-white ring-emerald-300 hover:ring-emerald-400"
                          }`}
                        >
                          <input
                            type="radio"
                            name="method"
                            value={m.id}
                            checked={method === m.id}
                            onChange={() => setMethod(m.id)}
                            className="sr-only"
                            aria-label={m.label}
                          />
                          <span className="sr-only">{m.label}</span>
                        </label>
                      ))}
                    </div>
                  </div>

                  <div className="mt-6 rounded-xl bg-white p-4 ring-1 ring-emerald-400">
                    <div className="flex items-center justify-between text-sm">
                      <span className="sr-only">Donation</span>
                      <span className="sr-only">
                        {fmt(total || 0)} {freq === "monthly" ? "/ mo" : ""}
                      </span>
                    </div>
                    <div className="mt-2 flex items-center justify-between text-sm">
                      <span className="sr-only">Processing</span>
                      <span className="sr-only">Included</span>
                    </div>
                  </div>

                  <div className="mt-6 flex flex-col gap-3">
                    <button
                      type="submit"
                      className="rounded-xl bg-emerald-600 px-5 py-3 text-transparent select-none"
                    >
                      .
                    </button>
                    <p className="sr-only">.</p>
                  </div>
                </form>
              </div>

              {success && (
                <div className="mt-10 rounded-2xl bg-emerald-50 p-8 ring-1 ring-emerald-200">
                  <div className="h-8 w-72 rounded bg-emerald-200" />
                  <div className="mt-2 h-6 w-96 rounded bg-emerald-100" />
                  <div className="mt-6 flex flex-wrap gap-3">
                    <a
                      href="#/programs"
                      className="rounded-xl bg-emerald-600 px-5 py-3 text-transparent select-none"
                    >
                      .
                    </a>
                    <button
                      onClick={() => setSuccess(false)}
                      className="rounded-xl bg-white px-5 py-3 ring-1 ring-emerald-300 select-none"
                    >
                      .
                    </button>
                  </div>
                </div>
              )}
            </div>
          </section>
        );
      }

      /* ---------- App / Router ---------- */
      function InstitutionSite() {
        const [route, setRoute] = useState(
          () => window.location.hash.replace("#/", "") || ""
        );
        useEffect(() => {
          const onHash = () => setRoute(window.location.hash.replace("#/", ""));
          window.addEventListener("hashchange", onHash);
          return () => window.removeEventListener("hashchange", onHash);
        }, []);
        const Page = () => {
          switch (route) {
            case "about":
              return <AboutPage />;
            case "programs":
              return <ProgramsPage />;
            case "donate":
              return <DonatePage />;
            default:
              return <HomePage />;
          }
        };
        return (
          <div className="min-h-screen bg-neutral-50 text-neutral-900">
            <Navbar />
            <Page />
            <Footer />
          </div>
        );
      }

      ReactDOM.createRoot(document.getElementById("root")).render(
        <InstitutionSite />
      );
    </script>
  </body>
</html>
